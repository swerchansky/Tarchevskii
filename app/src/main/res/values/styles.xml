<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCornersImage" parent="">
        <item name="cornerSize">14%</item>
    </style>

    <style name="FilmDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/film_additional</item>
    </style>

    <style name="FilmName" parent="FilmDescription">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/film_name</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilmAdditionalTitle" parent="FilmDescription">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilmAdditional" parent="FilmDescription">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
    </style>

</resources>